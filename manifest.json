{
    "manifest_version": 2,
    "name": "Wordnik Definition",
    "version": "1.0.0",

    "icons": {
        "128": "icon/icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],

            "js": ["content.js"]
        }
    ],

    "permissions": [
        "audioCapture"
    ],

    "browser_action": {
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html",
        "default_title": "Lookup a selected word using Wordnik API"
    }
}